// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  title         String
  description   String?
  phone         String?
  cidade        String
  latitude      Decimal
  longitude     Decimal
  created_at    DateTime @default(now())
  Pet           Pet[]

  @@map("orgs")
}

model Pet {
  id            String   @id @default(uuid())
  name          String
  sobre         String
  idade         String
  porte         String
  energia       String
  independencia String
  ambiente      String
  requisitos    String[] @default([])
  org           Org      @relation(fields: [orgs_id], references: [id])
  orgs_id       String
  created_at    DateTime @default(now())

  @@map("pets")
}
